@{
    ViewData["Title"] = "Employee Management";
}
<div class="page-header">
    <div class="container-fluid">
        <h1>@ViewData["Title"]</h1>
        <p class="responsive-text">Welcome to the employee management application! Manage your employee directory below.</p>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @(Html.Kendo().Grid<HRPlusAssignment.Models.Employee>()
            .Name("employeesGrid")
            .Columns(columns =>
            {
                columns.Bound(c => c.EmployeeId).Title("Employee ID").Width("80px");
                columns.Bound(c => c.FirstName).Width("100px");
                columns.Bound(c => c.LastName).Width("100px");
                columns.Bound(c => c.Email).Width("180px");
                columns.Bound(c => c.Phone).Width("100px");
                columns.Bound(c => c.PositionId).Title("Position ID").Width("80px");
                columns.Bound(c => c.Status).Width("80px");
                columns.Command(command => { command.Edit(); command.Destroy(); }).Width("150px");
            })
            .ToolBar(toolbar =>
            {
                toolbar.Create().Text("Add New Employee");
                toolbar.Excel();
                toolbar.Search();
            })
            .Editable(editable => editable.Mode(GridEditMode.PopUp).TemplateName("EmployeeEditor"))
            .HtmlAttributes(new { style = "height: 700px;" })
            .Scrollable(scrollable => scrollable.Virtual(true))
            .Resizable(resizable => resizable.Columns(true))
            .DataSource(dataSource => dataSource
                .Ajax()
                .PageSize(10)
                .Model(model =>
                {
                    model.Id(p => p.EmployeeId);
                    model.Field(p => p.EmployeeId).Editable(false);
                    model.Field(p => p.FirstName);
                    model.Field(p => p.LastName);
                    model.Field(p => p.Email);
                    model.Field(p => p.Phone);
                    model.Field(p => p.PositionId);
                    model.Field(p => p.Status);
                })
                .Read(read => read.Action("Employees_Read", "Employees"))
                .Create(create => create.Action("Employee_Create", "Employees"))
                .Update(update => update.Action("Employee_Update", "Employees"))
                .Destroy(destroy => destroy.Action("Employee_Delete", "Employees"))
            )
        )
    </div>
</div>