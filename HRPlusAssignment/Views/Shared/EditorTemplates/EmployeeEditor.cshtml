@model HRPlusAssignment.Models.Employee

<div class="k-edit-form-container">
    <div class="k-edit-label">
        <label for="EmployeeId"><i class="fas fa-id-badge"></i> Employee ID</label>
    </div>
    <div class="k-edit-field">
        @Html.TextBoxFor(m => m.EmployeeId, new { @class = "k-textbox", @readonly = "readonly", @placeholder = "Auto-generated", @style = "background-color: #f5f5f5;" })
        <small class="text-muted">Employee ID is auto-generated</small>
    </div>

    <div class="k-edit-label">
        <label for="FirstName"><i class="fas fa-user"></i> First Name</label>
    </div>
    <div class="k-edit-field">
        @Html.TextBoxFor(m => m.FirstName, new { @class = "k-textbox", @placeholder = "Enter first name" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>

    <div class="k-edit-label">
        <label for="LastName"><i class="fas fa-user"></i> Last Name</label>
    </div>
    <div class="k-edit-field">
        @Html.TextBoxFor(m => m.LastName, new { @class = "k-textbox", @placeholder = "Enter last name" })
        @Html.ValidationMessageFor(m => m.LastName)
    </div>

    <div class="k-edit-label">
        <label for="Email"><i class="fas fa-envelope"></i> Email</label>
    </div>
    <div class="k-edit-field">
        @Html.TextBoxFor(m => m.Email, new { @class = "k-textbox", type = "email", @placeholder = "employee@company.com" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="k-edit-label">
        <label for="Phone"><i class="fas fa-phone"></i> Phone</label>
    </div>
    <div class="k-edit-field">
        @Html.TextBoxFor(m => m.Phone, new { @class = "k-textbox", type = "tel", @placeholder = "+1 (555) 123-4567" })
        @Html.ValidationMessageFor(m => m.Phone)
    </div>

    <div class="k-edit-label">
        <label for="PositionId"><i class="fas fa-briefcase"></i> Position</label>
    </div>
    <div class="k-edit-field">
        @(Html.Kendo().DropDownListFor(m => m.PositionId)
            .DataTextField("Text")
            .DataValueField("Value")
            .DataSource(source => source
                .Read(read => read.Action("GetPositions", "Home"))
            )
            .HtmlAttributes(new { @class = "k-textbox", @placeholder = "Select Position" })
        )
        @Html.ValidationMessageFor(m => m.PositionId)
    </div>

    <div class="k-edit-label">
        <label for="Status"><i class="fas fa-info-circle"></i> Status</label>
    </div>
    <div class="k-edit-field">
        @(Html.Kendo().DropDownListFor(m => m.Status)
            .DataTextField("Text")
            .DataValueField("Value")
            .BindTo(new List<SelectListItem>
            {
                new SelectListItem { Text = "Active", Value = "0" },
                new SelectListItem { Text = "Inactive", Value = "1" },
                new SelectListItem { Text = "On Leave", Value = "2" },
                new SelectListItem { Text = "Terminated", Value = "3" }
            })
            .HtmlAttributes(new { @class = "k-textbox", @placeholder = "Select Status" })
        )
        @Html.ValidationMessageFor(m => m.Status)
    </div>
</div>
