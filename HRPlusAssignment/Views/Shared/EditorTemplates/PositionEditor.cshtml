@model HRPlusAssignment.Models.Position

<div class="k-edit-form-container">
    <div class="k-edit-label">
        <label for="PositionId"><i class="fas fa-id-card"></i> Position ID</label>
    </div>
    <div class="k-edit-field">
        @Html.TextBoxFor(m => m.PositionId, new { @class = "k-textbox", @readonly = "readonly", @placeholder = "Auto-generated" })
    </div>

    <div class="k-edit-label">
        <label for="PositionCode"><i class="fas fa-code"></i> Position Code</label>
    </div>
    <div class="k-edit-field">
        @Html.TextBoxFor(m => m.PositionCode, new { @class = "k-textbox", @placeholder = "e.g., DEV001" })
        @Html.ValidationMessageFor(m => m.PositionCode)
    </div>

    <div class="k-edit-label">
        <label for="PositionTitle"><i class="fas fa-briefcase"></i> Position Title</label>
    </div>
    <div class="k-edit-field">
        @Html.TextBoxFor(m => m.PositionTitle, new { @class = "k-textbox", @placeholder = "e.g., Senior Developer" })
        @Html.ValidationMessageFor(m => m.PositionTitle)
    </div>

    <div class="k-edit-label">
        <label for="DepartmentId"><i class="fas fa-building"></i> Department</label>
    </div>
    <div class="k-edit-field">
        @(Html.Kendo().DropDownListFor(m => m.DepartmentId)
            .DataTextField("Text")
            .DataValueField("Value")
            .DataSource(source => source
                .Read(read => read.Action("GetDepartments", "Home"))
            )
            .HtmlAttributes(new { @class = "k-textbox", @placeholder = "Select Department" })
        )
        @Html.ValidationMessageFor(m => m.DepartmentId)
    </div>

    <div class="k-edit-label">
        <label for="JobId"><i class="fas fa-tasks"></i> Job</label>
    </div>
    <div class="k-edit-field">
        @(Html.Kendo().DropDownListFor(m => m.JobId)
            .DataTextField("Text")
            .DataValueField("Value")
            .DataSource(source => source
                .Read(read => read.Action("GetJobs", "Home"))
            )
            .HtmlAttributes(new { @class = "k-textbox", @placeholder = "Select Job" })
        )
        @Html.ValidationMessageFor(m => m.JobId)
    </div>

    <div class="k-edit-label">
        <label for="JobLevel"><i class="fas fa-layer-group"></i> Job Level</label>
    </div>
    <div class="k-edit-field">
        @Html.TextBoxFor(m => m.JobLevel, new { @class = "k-textbox", @placeholder = "e.g., Senior, Junior, Lead" })
        @Html.ValidationMessageFor(m => m.JobLevel)
    </div>

    <div class="k-edit-label">
        <label for="ReportsToPositionId"><i class="fas fa-sitemap"></i> Reports To Position</label>
    </div>
    <div class="k-edit-field">
        @(Html.Kendo().DropDownListFor(m => m.ReportsToPositionId)
            .DataTextField("Text")
            .DataValueField("Value")
            .DataSource(source => source
                .Read(read => read.Action("GetPositions", "Home"))
            )
            .HtmlAttributes(new { @class = "k-textbox", @placeholder = "Select Reporting Position (Optional)" })
        )
        @Html.ValidationMessageFor(m => m.ReportsToPositionId)
    </div>

    <div class="k-edit-label">
        <label for="Status"><i class="fas fa-info-circle"></i> Status</label>
    </div>
    <div class="k-edit-field">
        @(Html.Kendo().DropDownListFor(m => m.Status)
            .DataTextField("Text")
            .DataValueField("Value")
            .BindTo(new List<SelectListItem>
            {
                new SelectListItem { Text = "Active", Value = "0" },
                new SelectListItem { Text = "Inactive", Value = "1" },
                new SelectListItem { Text = "Vacant", Value = "2" }
            })
            .HtmlAttributes(new { @class = "k-textbox", @placeholder = "Select Status" })
        )
        @Html.ValidationMessageFor(m => m.Status)
    </div>
</div>
